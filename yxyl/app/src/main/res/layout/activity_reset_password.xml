<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="yanxiu.com.yxyl.Register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCommon">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <RelativeLayout
            style="@style/TitleCommon"
            >
            <ImageView
                android:id="@+id/iv_back"
                style="@style/CancelOrBackCommon"

                />
            <TextView
                android:id="@id/tx_title"
                android:text="重置密码"
                style="@style/TitleTextCommon"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_resetPassword"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/colorAccent"
            />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <LinearLayout
                style="@style/MylayoutCommon"
                android:background="@drawable/top_round_corners_5dp"
                >
                <EditText
                    android:id="@+id/ed_first_passnumber"
                    style="@style/PassCommon"
                    />
                <ImageView
                    style="@style/DeltextbuttonCommon"/>
            </LinearLayout>
            <LinearLayout
                style="@style/MylayoutCommon"
                android:background="@drawable/botton_round_corners_5dp"
                android:layout_marginTop="1dp"
                >
                <EditText
                    android:id="@+id/ed_second_passnumber"
                    style="@style/PassCommon"
                    android:hint="请再次输入密码"
                    />
                <ImageView
                   style="@style/DeltextbuttonCommon"/>
            </LinearLayout>


            <Button
                android:id="@+id/bt_sure_reset_botton"
                style="@style/ButtonCommon"
                android:text=" 确认重置"

                />
        </LinearLayout>

    </LinearLayout>

</ScrollView>