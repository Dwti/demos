<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_main"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="exampleexample.testing.justjava.MainActivity">
        <EditText
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint"
            android:inputType="number"
            android:imeOptions="actionNext"

            />
        <TextView
            android:id="@+id/topping_tetxt_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/topping_text"
            style="@style/CommonText"

            />
        <CheckBox
            android:id="@+id/checkbox_chocolate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add chocolate"
            />
        <CheckBox
            android:id="@+id/checkbox_milk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add milk"
            />
        <TextView
            android:id="@+id/quality_tetxt_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/count_text"
            style="@style/CommonText"
            />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <Button
            android:id="@+id/reduce_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="-"
            android:onClick="reduceOrder"
            />
        <TextView
            android:id="@+id/count_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="1"
            android:textColor="#000000"
            />
        <Button
            android:id="@+id/add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="+"
            android:onClick="addOrder"/>

    </LinearLayout>
        <TextView
            android:id="@+id/price_tetxt_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_detail_text"
            style="@style/CommonText"
            />
        <TextView
            android:id="@+id/pricecount_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginTop="10dp"
            />
        <!--  android:textAllCaps="false" 让button的文字保持原样，不会将小写的字母自动转化成大写 -->
        <Button
            android:id="@+id/count_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/order_text"
            android:textAllCaps="false"
            android:onClick="submitOrder"
            />
        <!--启动系统相机button-->
     <!--   <Button
            android:id="@+id/photo_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="photo"
            android:onClick="clickPhoto"
            />-->
    </LinearLayout>
</ScrollView>