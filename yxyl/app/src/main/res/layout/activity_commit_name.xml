<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="yanxiu.com.yxyl.Register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCommon">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <RelativeLayout
            style="@style/TitleCommon"
            >
            <ImageView
                android:id="@+id/backJoinclass"
                style="@style/CancelOrBackCommon"
                />
            <TextView
                android:text="提交姓名"
                style="@style/TitleTextCommon"/>

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/colorAccent"
            />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:background="@drawable/min_round"
                />
            <TextView
                android:layout_margin="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="七年级20班"
                android:textSize="19dp"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="25dp"
            style="@style/MylayoutCommon"
            android:background="@drawable/top_round_corners_5dp">
            <TextView
                style="@style/ClassMessageCommon"
                android:text="班级号码"/>
            <TextView
                android:id="@+id/tx_classNumber"
               style="@style/ClassMessageCommon"
                android:text="10003483"
                android:textColor="#FFFFFF"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="1dp"
            style="@style/MylayoutCommon"
            android:background="@color/colorMyLayoutCommon">
            <TextView
                style="@style/ClassMessageCommon"
                android:text="老师姓名"/>
            <TextView
                android:id="@+id/tx_techerName"
                style="@style/ClassMessageCommon"
                android:text="刘一手"
                android:textColor="#FFFFFF"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="1dp"
            style="@style/MylayoutCommon"
            android:background="@color/colorMyLayoutCommon">
            <TextView
                style="@style/ClassMessageCommon"
                android:text="班级成员"/>
            <TextView
                android:id="@+id/tx_classMember"
                style="@style/ClassMessageCommon"
                android:text="56人"
                android:textColor="#FFFFFF"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="1dp"
            style="@style/MylayoutCommon"
            android:background="@drawable/botton_round_corners_5dp">
            <TextView
                style="@style/ClassMessageCommon"
                android:text="学校名称"/>
            <TextView
                android:id="@+id/tx_schoolName"
                style="@style/ClassMessageCommon"
                android:text="绵阳中学"
                android:textColor="#FFFFFF"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            style="@style/MylayoutCommon"
            android:background="@drawable/button_round_corners_6dp">
            <TextView
                style="@style/ClassMessageCommon"
                android:text="你的姓名"/>
            <EditText
                android:id="@id/ed_relname"
                style="@style/ClassMessageCommon"
                android:hint="请输入你的真实姓名"
                android:textColorHint="@color/colorCommon"
                android:textColor="#FFFFFF"
                android:maxLength="18"
                android:background="@null"
                />
        </LinearLayout>
            <Button
                android:id="@+id/bt_joinClass_button"
                style="@style/ButtonCommon"
                android:text="加入班级"
                android:onClick="joinBasepage"/>
    </LinearLayout>
</ScrollView>