<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="yanxiu.com.yxyl.Register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCommon">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <RelativeLayout
           style="@style/TitleCommon"
            >
            <ImageView
                style="@style/CancelOrBackCommon"
                />
            <TextView
                android:text="注册"
                style="@style/TitleTextCommon"/>

        </RelativeLayout>



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/colorAccent"
        />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
      <LinearLayout
          style="@style/MylayoutCommon"
          android:background="@drawable/top_round_corners_5dp"

          >
          <EditText
              android:id="@+id/moblie_number"
              style="@style/PassCommon"
              android:layout_width="269dp"
              android:layout_height="match_parent"
              android:hint="请输入手机号"
              android:paddingLeft="20dp"
              android:maxLength="11"
              android:inputType="number"/>
          <ImageView
              android:id="@+id/delmobile_button"
              style="@style/DeltextbuttonCommon"/>
      </LinearLayout>
        <LinearLayout
            style="@style/MylayoutCommon"
            android:layout_marginTop="1dp"
            android:background="#69ad0a"
            >
            <EditText
                android:id="@+id/verfication_number"
                style="@style/CodeCommon"
                />
            <TextView
                android:layout_width="1dp"
                android:layout_height="18dp"
                android:background="@color/colorCommon"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:layout_marginLeft="18dp"
                android:textColor="@color/colorCommon"
                android:textSize="16dp"/>
        </LinearLayout>


        <LinearLayout
            style="@style/MylayoutCommon"
            android:background="@drawable/botton_round_corners_5dp"
            android:layout_marginTop="1dp">
            <EditText
                android:id="@+id/password"
                style="@style/PassCommon"
                />
            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginRight="17dp"
                android:background="#FF0E25D7"/>
        </LinearLayout>
        <Button
            style="@style/ButtonCommon"
            android:text=" 注 册" />
    </LinearLayout>

    </LinearLayout>

</ScrollView>