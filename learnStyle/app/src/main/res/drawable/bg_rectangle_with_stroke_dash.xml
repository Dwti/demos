<?xml version="1.0" encoding="utf-8"?>
<!--默认形状是矩形-->
 <shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!--填充颜色-->
    <solid android:color="#2f90db">
    </solid>
    <!--圆角，只适用于矩形-->
    <corners
        android:radius="12dp">
    </corners>
   <!--设置内容区域边界的间距-->
    <padding
        android:bottom="12dp"
        android:top="12dp"
        android:left="12dp"
        android:right="12dp">
    </padding>
   <!--设置描边style-->
    <stroke
        android:width="1dp"
        android:color="@color/colorAccent"
        android:dashGap="2dp"
        android:dashWidth="2dp"></stroke>
</shape>