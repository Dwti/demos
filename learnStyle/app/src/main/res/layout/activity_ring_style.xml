<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="du.com.learnstyle.RingStyle"
    android:orientation="vertical"
    android:gravity="center_horizontal">


    <ImageView
        android:id="@+id/ring_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_ring"


        />
    <ImageView
        android:id="@+id/ring_2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_ring_stroke"

        />
    <ImageView
        android:id="@+id/ring_3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_ring_gradient"


        />
    <ImageView
        android:id="@+id/ring_4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_ring_stroke_gradient"


        />
    <ImageView
        android:id="@+id/ring_5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_ring_stroke_gradient_rotate"
        android:visibility="visible"

        />
    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="好好玩"
        android:gravity="center"
        android:background="@drawable/bg_btn_rectangle_layer_list"/>

    <Button
        android:id="@+id/bt_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="线线style点这"
        />




</LinearLayout>
